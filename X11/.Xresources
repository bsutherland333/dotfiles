!!! URxvt Configuration !!!

!! configure colors with terminal.sexy !!
! special
*.foreground:   #c6c6c6
*.background:   #1c1c1c
*.cursorColor:  #c6c6c6

! black
*.color0:       #303030
*.color8:       #444444

! red
*.color1:       #da4a4a
*.color9:       #da4a4a

! green
*.color2:       #71b471
*.color10:      #71b471

! yellow
*.color3:       #ffd044
*.color11:      #ffd044

! blue
*.color4:       #87afd7
*.color12:      #87afd7

! magenta
*.color5:       #afafd7
*.color13:      #afafd7

! cyan
*.color6:       #afd7ff
*.color14:      #afd7ff

! white
*.color7:       #e4e4e4
*.color15:      #ffffff

! Set the font
URxvt*font: xft:Inconsolata Nerd Font Mono:size=13:antialias=true
URxvt*letterSpace: -1

! Set the border 
URxvt*borderLess: false
URxvt*externalBorder: 0
URxvt*internalBorder: 4
URxvt*scrollBar: false

! Set the number of lines to save
URxvt*saveLines: 5000

